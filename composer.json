{
    "name": "douyuxingchen/php-work-wechat",
    "description": "PHP 开发的企业微信消息加密和解密SDK，简化企业微信API开发步骤。",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Douyuxingchen\\PhpWorkWechat\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "libin",
            "email": "libin@douyuxingchen.com"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "ext-json": "*",
        "laravel/framework": "^6.0",
        "guzzlehttp/guzzle": "^6.0",
        "ext-openssl": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    }
}
